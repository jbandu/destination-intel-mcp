# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/destination_intelligence
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# External API Keys
OPENAI_API_KEY=sk-your-openai-api-key
TRIPADVISOR_API_KEY=your-tripadvisor-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
OPENWEATHER_API_KEY=your-openweather-api-key
EVENTBRITE_API_KEY=your-eventbrite-api-key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Content Generation Settings
AI_MODEL=gpt-4-turbo-preview
MAX_CONTENT_LENGTH=2000
ENABLE_CONTENT_CACHING=true

# Recommendation Engine
RECOMMENDATION_MODEL_PATH=./models/recommendation_model
MIN_RECOMMENDATION_SCORE=0.6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
